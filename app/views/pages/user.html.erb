<h1 class="title">故事列表</h2>

<% @stories.each do |story| %>
 <div class="content">
   <h2 class="title">

     <h2 class="title is-4"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h2>
   </h2>
   <p><%= strip_tags(story.content).truncate(200) %></p>
   <p><%= story.user.username %> | <%= time_ago_in_words(story.created_at) %></p>
 </div>
<hr>

  <% end %>
