<section class="columns">
        <!-- left -->
        <section class="column">
          <article>
          <% @newest_story.each do |story|  %>

            <% if story.cover_image.attached? %>
            <figure class="media">
              <%= image_tag story.cover_image.variant(resize: '350X350') %>
            </figure>
            <% end%>
            
            <h2 class="title is-5"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h2>
            
            <p class="content">
            <%= strip_tags(story.content).truncate(200) %>
            </p>
            <footer>
               <p><%= link_to story.user.username, user_page_path(story.user.username),class: 'has-text-grey-dark' %> | <%= time_ago_in_words(story.created_at) %></p>
            </footer>

            <% end %>
          </article>
        </section>
        <!-- left -->
        <!-- middle -->
        <section class="column">
        <% @newest_story_from_number2.each do |story|  %>
          <article class="media">

            <% if story.cover_image.attached? %>
            <figure class="media-left">
              <%= image_tag story.cover_image.variant(resize: '100X100') %>
            </figure>
            <% end%>
            
            <div class="media-content">
              <h2 class="title is-5"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h2>
              <footer>
               <p><%= link_to story.user.username, user_page_path(story.user.username),class: 'has-text-grey-dark' %> | <%= time_ago_in_words(story.created_at) %></p>
              </footer>
            </div>
          </article>
        <% end %>
        </section>
        <!-- middle -->
        <!-- right -->
        <section class="column">
          <article>

          <% @story_most_clap.each do |story|  %>

            <% if story.cover_image.attached? %>
            <figure class="media">
              <%= image_tag story.cover_image.variant(resize: '350X300') %>
            </figure>
            <% end%>

            <h2 class="title is-5"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h2>

            <p class="content">
            <%= strip_tags(story.content).truncate(20) %>
            </p>

            <footer>
              <p><%= link_to story.user.username, user_page_path(story.user.username),class: 'has-text-grey-dark' %> | <%= time_ago_in_words(story.created_at) %></p>
            </footer>
            <% end %>
          </article>
        </section>
        <!-- right -->
      </section>

      <hr>

      <section class="columns">

        <!-- article list -->
        <section class="column is-two-thirds">

          <% @stories.each do |story|  %>
          <article class="media">
            <div class="media-content">
              <h2 class="title is-4"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h2>
              <p class="content"><%= strip_tags(story.content).truncate(200) %></p>
              <footer>
                <p><%= link_to story.user.username, user_page_path(story.user.username),class: 'has-text-grey-dark' %> | <%= time_ago_in_words(story.created_at) %></p>
              </footer>
            </div>

            <% if story.cover_image.attached? %>
            <figure class="media-right">
              <%= image_tag story.cover_image.variant(resize: '150X150') %>
            </figure>
            <% end%>

          </article>
          <% end %>

        </section>
        <!-- article list -->

        <section class="column">
          <h2 class="title is-4">Popular on Medium</h2>
          <hr>

          <% @stories_most_clap.each_with_index do |story, index|  %>
          <article class="media">
            <div class="media-left"><%= index +1 %></div>
            <div class="media-content">
              <h3 class="title is-6"><%= link_to story.title , story_page_path(story.user.username, story), class: 'has-text-grey-dark' %></h3>
              <footer>
                <p class="content"><%= strip_tags(story.content).truncate(20) %></p>
              </footer>
            </div>
          </article>
          <% end %>
  
        </section>
      </section>